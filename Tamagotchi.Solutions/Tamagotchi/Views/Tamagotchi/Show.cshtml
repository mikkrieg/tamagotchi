@using Tamagotchi.Models;

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  <link href="~/css/show.css" rel="stylesheet" type="text/css">
  <title>@Model.Name</title>
</head>
<body>
  <div class="container">
    <h1 class="text-center">Your Pet</h1>
    <h2 class="text-center">@Model.Name</h2>
    @if(@Model.Food > 0 && @Model.Attention > 0 && @Model.Sleep > 0)
    {
      <div class="row">
        <div class="col-2 offset-3">
          <p class="text-center">Food: <span class="bolder">@Model.Food</span></p>
        </div>
        <div class="col-2">
          <p class="text-center">Play: <span class="bolder">@Model.Attention</span></p>
        </div>
        <div class="col-2">
          <p class="text-center">Sleep: <span class="bolder">@Model.Sleep</span></p>
        </div>
      </div>
      <a href="/tamagotchi/@Model.Id/feed"><button class="btn btn-dark">Feed</button></a>
      <a href="/tamagotchi/@Model.Id/interact"><button class="btn btn-dark">Interact</button></a>
      <a href="/tamagotchi/@Model.Id/sleep"><button class="btn btn-dark">Sleep</button></a>

      <a href="/tamagotchi"><button class="btn btn-dark">See all Pets</button></a>
    }
    else 
    {
      <p>Oh no @Model.Name is dead</p>
      <form action="/tamagotchi/delete/@Model.Id" method="post">
        <button type="submit" name="button" class="btn btn-danger">Bury Pet</button>
      </form>
      
    }
  </div>
</body>
</html>

